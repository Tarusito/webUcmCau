<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro Usuario</title>
    <link rel="icon" href="img/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="css/register.css">
</head>

<body>
    <div class="row mt-3 ms-2">
        <div class = "col-md-2">
            <img src="img/logoUCM_130x147.png" class="img-fluid" alt="Logo UCM">
        </div>
        <div class="col-md-9">
            <div class="text-center mt-4">
                <h1>UCM - CAU</h1>
                <p>Centro de Atenci&oacute;n al Usuario</p>
            </div>
        </div>
    </div>

    <form method="POST" action="/register" id="formulario" enctype="multipart/form-data">
        <div class="row mt-4 justify-content-evenly">
            <div class="col-md-4">
                <p>Correo</p>
                <div class="input-group">
                    <input type="text" class="form-control" name = "correo" placeholder="ejemplo@ucm.es" aria-label="ejemplo" aria-describedby="inputCorreo" id="formCorreo" required>
                    <!-- <span class="input-group-text">@ucm.es</span> -->
                </div>
            </div>
            <div class="col-md-4">
                <p>Nombre para mostrar</p>
                <div class="input-group">
                    <input type="text" class="form-control" name = "nombre" placeholder="Nombre Apellidos" id="formNombre" required>
                </div>
            </div>
        </div>
    
        <div class="row mt-4 justify-content-evenly">
            <div class="col-md-4">
                <p>Contraseña</p>
                <div class="input-group">
                    <input type="password" class="form-control" name = "contrasenia" placeholder="" id="formPass" required>
                </div>
            </div>
            <div class="col-md-4">
                <p>Perfil Universitario</p>
                <div class="input-group">
                    <label class="input-group-text" for="perfilesUniversitarios">Perfiles:</label>
                    <select class="form-select" name="perfilUniversitario" id="perfilesUniversitarios" onchange="mostrarCheckTecnico();">
                        <option selected value="null"></option>
                        <option value="Alumno">Alumno</option>
                        <option value="PAS" id="PAS">Personal de Administraci&oacute;n y Servicios (PAS)</option>
                        <option value="PDI">Personal Docente e Investigador (PDI)</option>
                        <option value="AA">Antiguo Alumno</option>
                    </select>
                </div>
            </div>
        </div>
    
        <div class="row mt-4 justify-content-evenly">
            <div class="col-md-4">
                <p>Confirmar Contraseña</p>
                <div class="input-group">
                    <input type="password" name = "contrasenia2" class="form-control" placeholder="" id="formConfirmacionPass" required>
                </div>
            </div>
    
            <div class="col-md-4">
                <div class="row" id="tecnicoForm" style="display: none;">
                    <div class="col-md-6">
                        <div class="form-check checkbox-lg">
                            <p>T&eacute;cnico</p>
                            <input class="form-check-input" name = "tecnico" type="checkbox" id = "esTecnico" onchange="mostrarNEmpleado();">
                        </div>
                    </div>
    
                    <div class="col-md-6">
                        <div id = "NEmpleado" style="display: none;">
                            <p>Nº Empleado</p>
                            <div class="input-group">
                                <input type="text" class="form-control" name = "nEmpleado" placeholder="Número empleado">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
        </div>
    
        <div class="row mt-4 justify-content-evenly">
            <div class="col-md-4">
                <p>Imagen</p>
                <div class="input-group">
                    <input type="file" name = "imagen" class="form-control" id="imagen" accept=".jpeg">
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    

        <div class="row mt-4 justify-content-evenly mt-5">
            <div class="d-grid col-md-4">
                <a href="/login" class="btn btn-dark">Iniciar sesi&oacute;n</a>
            </div>
            <div class="d-grid col-md-4">
                <input type="submit" class="btn btn-dark" value="Crear nueva cuenta" />
            </div>
        </div>
    </form>

    <% if(errorMsg != null){ %>        
        <h4 class="text-danger mt-5 text-center"><%= errorMsg %></h4>
    <% } %>

    <script>
        function mostrarCheckTecnico() {
            var isPAS = document.getElementById("PAS").selected;
            if (isPAS)
                document.getElementById("tecnicoForm").removeAttribute("style");
            else
                document.getElementById("tecnicoForm").style.display = "none";
        }

        function mostrarNEmpleado(){
            var isTecnico = document.getElementById("esTecnico");
            if(isTecnico.checked)
                document.getElementById("NEmpleado").removeAttribute("style");
            else
                document.getElementById("NEmpleado").style.display = "none";
        }
    </script>

    <!-- <script src="/Practicas/PracticaObligatoria/scripts/comprobacionesRegistro.js"></script> -->


</body>

</html>