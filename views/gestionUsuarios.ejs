            <div class="col">
                <a href="#">Gestión de usuarios</a>
            </div>
        </div>
    </div>

    <div class="container-sm mt-3">
        <table class="table table-dark table-striped me-5">
            <thead>
                <tr>
                    <th scope="col">Fecha</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(function(u){ %>
                <tr class="getText" data-bs-toggle="modal" data-bs-target="#plantillaModal" id="<%= u.id %>-<%= u.perfilUniversitario%>-<%= u.nombre %>">
                    <td><%= u.fecha %></td>
                    <td scope="row"><%= u.nombre %></td>              
                    <td><%= u.perfilUniversitario%></td>
                    <td>
                        <div class="row row-cols-auto me-3">
                            <div class="col">
                                <img src="img/bin.png" alt="basura" data-bs-toggle="modal" data-bs-target="#borrarUsuarioModal" style="cursor: pointer;">                            
                            </div>
                        </div>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
